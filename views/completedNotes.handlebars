<main class="mt-4 mb-4">
  <div class="container">
    <h2>Notas Conclu√≠das</h2>
    <div class="form-area">
      <form action="/order-completed" method="post">
         <select name="noteFilter" id="noteFilter">
          {{#if asc}}
            <option value="asc" selected>Crescente</option>
          {{else}}
            <option value="asc">Crescente</option>
          {{/if}}
          {{#if desc}}
            <option value="desc" selected>Decrescente</option>
          {{else}}
            <option value="desc">Decrescente</option>
          {{/if}}
        </select>
        <button type="submit"><i
            class="fa-solid fa-magnifying-glass"
          ></i></button>
      </form>
    </div>
    <div class="notes-div mt-4">
      {{#if notes}}
        {{#each notes}}
          <div class="notes mb-4">
            <div class="container">
              <div class="row">
                <div class="col-1">
                  <i class="fa-solid fa-book"></i>
                </div>
                <div class="col-9">
                  <h3><a href="/note?noteId={{_id}}">{{title_note}}</a>
                    <span><a href="/tag?tag={{tag_note}}&order=asc">{{tag_note}}</a></span></h3>
                  <h4>{{content_note}}</h4>
                </div>
                <div class="col-2">
                  <a
                    href="/remove-note/completed/{{_id}}"
                    class="cancel-note"
                  ><i class="fa-solid fa-trash"></i></a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <h3>Nada para mostrar aqui</h3>
      {{/if}}

    </div>
  </div>
</main>