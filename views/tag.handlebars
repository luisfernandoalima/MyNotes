<main class="mt-4 mb-4">
  <div class="container">
    <h2>Notas Abertas</h2>
    <div class="form-area">
      <a href="/new-note">
        <button>
          Nova Nota
          <i class="fa-solid fa-pencil"></i>
        </button>
      </a>
      <form action="/" method="get">
        <select name="noteFilter" id="noteFilter">
          <option value="">Crescente</option>
          <option value="">Decrescente</option>
        </select>
        <button type="submit"><i
            class="fa-solid fa-magnifying-glass"
          ></i></button>
      </form>
    </div>
    <div class="notes-div mt-4">

      {{#if notes}}
        {{#each notes}}
          <div class="notes mb-4">
            <div class="container">
              <div class="row">
                <div class="col-1">
                  <i class="fa-solid fa-book"></i>
                </div>
                <div class="col-9">
                  <h3><a href="/note?noteId={{_id}}">{{title_note}}</a> <span class="{{status_note}}">{{status_note}}</span></h3>
                  <h4>{{content_note}}</h4>
                </div>
                <div class="col-3 col-md-2">
                  <a href="/complete-note/{{_id}}" class="complete-note"><i
                      class="fa-solid fa-check"
                    ></i></a>
                  <a href="/cancel-note/{{_id}}" class="cancel-note"><i
                      class="fa-solid fa-ban"
                    ></i></a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
      {{/if}}
    </div>
  </div>
</main>