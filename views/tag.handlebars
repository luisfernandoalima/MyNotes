<main class="mt-4 mb-4">
  <div class="container">
    <h2>Buscando pela tag: "{{titulo}}"</h2>
    <div class="form-area">
      <a href="/new-note">
        <button>
          Nova Nota
          <i class="fa-solid fa-pencil"></i>
        </button>
      </a>
      <form action="/order-tag" method="post">
        <input type="hidden" name="tagInput" value="{{titulo}}" />
        <select name="noteFilter" id="noteFilter">
          {{#if asc}}
            <option value="asc" selected>Crescente</option>
          {{else}}
            <option value="asc">Crescente</option>
          {{/if}}
          {{#if desc}}
            <option value="desc" selected>Decrescente</option>
          {{else}}
            <option value="desc">Decrescente</option>
          {{/if}}
        </select>
        <button type="submit"><i
            class="fa-solid fa-magnifying-glass"
          ></i></button>
      </form>
    </div>
    <div class="notes-div mt-4">

      {{#if notes}}
        {{#each notes}}
          <div class="notes mb-4">
            <div class="container">
              <div class="row">
                <div class="col-1">
                  <i class="fa-solid fa-book"></i>
                </div>
                <div class="col-9">
                  <h3><a href="/note?noteId={{_id}}">{{title_note}}</a>
                    <span class="{{status_note}}">{{status_note}}</span></h3>
                  <h4>{{content_note}}</h4>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
      {{/if}}
    </div>
  </div>
</main>